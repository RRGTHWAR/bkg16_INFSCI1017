	<div id="searchResults">
		<table border="1" id="tblSearchResults">
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Band Name</th>
				<th>Biography</th>
				<th>Songs</th>
				<th>Albums</th>
			</tr>
